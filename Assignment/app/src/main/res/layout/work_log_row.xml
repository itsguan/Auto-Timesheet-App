<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/work_log_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/log_row_placeholder_date"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/work_log_location_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:gravity="left"
        android:paddingLeft="2dp"
        android:text="@string/log_row_placeholder_address"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/work_log_hours_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:paddingRight="10dp"
        android:text="@string/log_row_placeholder_hours"
        android:textSize="16sp" />

</LinearLayout>